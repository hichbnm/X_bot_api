  "item": [
    {
      "name": "System Status",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{apiToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/v1/status",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "status"
          ]
        },
        "description": "Check if the service is up and running"
      },
      "response": []
    },
    {
